@page
@model PostPrivate.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form enctype="multipart/form-data" asp-page="create"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.Profile.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Profile.UserName" class="form-control" placeholder="username">
            <span asp-validation-for="@Model.Profile.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Profile.FName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Profile.FName" class="form-control" placeholder="First">
            <span asp-validation-for="@Model.Profile.FName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Profile.LName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Profile.LName" class="form-control" placeholder="Last">
            <span asp-validation-for="@Model.Profile.LName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Profile.Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Profile.Age" class="form-control" placeholder="Age">
            <span asp-validation-for="@Model.Profile.Age" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>